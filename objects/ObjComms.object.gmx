    case "messageBody":
        //increment message
        if (msgStage &lt; array_height_2d(arrayCommsMsg) - 1)
        {
            msgStage ++;
            alarm[0] = arrayCommsMsg[msgStage,0];
            ScrCommsSetAvatar(arrayCommsMsg[msgStage,1],arrayCommsMsg[msgStage,2],arrayCommsMsg[msgStage,3]);
        }
        //maintain current side and show end static
        else
        {
            msgMode = "messageEnd";
            alarm[0] = csCommsAvatarStaticTime;
            with newCommsAvatar
            {
                sprite_index = SprCommsAvatarStatic;
                image_speed = csCommsAvatarSpeedMedium;
                image_index = 0;
            }
        }
    break;

    case "messageEnd":
        //destroy when finished
        ScrCommsDestroy();
    break;
}
